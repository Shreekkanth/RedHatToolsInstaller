[main]
vardir = /var/lib/puppet
logdir = /var/log/puppet
rundir = /var/run/puppet
ssldir = $vardir/ssl
disable_warnings = deprecations

[agent]
pluginsync      = true
report          = true
ignoreschedules = true
daemon          = false
ca_server       = servidor
certname        = {{ ansible_fqdn }}
environment     = {{_entornop}}
server          = servidor
configtimeout   = 300
show_diff       = true
