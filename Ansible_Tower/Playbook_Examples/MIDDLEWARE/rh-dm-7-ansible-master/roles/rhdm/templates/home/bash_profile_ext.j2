function banner(){
    msg_green  "$hdl"
    msg_green_ "$caption"
    msg_green  "$hdl"
    msg "Technology:" "Red Hat Decision Manager"
    msg "Environment:" "$V_ENV" $C_HEAVY_CHECK_MARK
    msg "Hostname:" "$V_HOST"
