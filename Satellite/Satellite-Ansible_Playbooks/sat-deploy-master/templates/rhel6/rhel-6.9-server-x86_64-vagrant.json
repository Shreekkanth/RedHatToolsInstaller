{
    "variables": {
        "user": "vagrant",
        "password": "vagrant",
        "disk_size": "100000"
    },

    "builders":
    [
        {
            "name": "rhel-6.9-x86_64-server-vagrant",

            "type": "qemu",
            "format": "qcow2",
            "accelerator": "kvm",
            "headless": true,
            "disk_size": "{{ user `disk_size`}}",

            "iso_url": "http://download.eng.rdu2.redhat.com/released/RHEL-6/6.9/Server/x86_64/iso/RHEL-6.9-20170309.0-Server-x86_64-boot.iso",
            "iso_checksum": "e515deba523be08256a05b17534c48fb",
            "iso_checksum_type": "md5",

            "http_directory": "http",

            "ssh_username": "{{user `user`}}",
            "ssh_password": "{{user `password`}}",
            "ssh_wait_timeout": "20m",
            "shutdown_command": "echo '{{user `password`}}'|sudo -S shutdown -P now",

            "boot_wait": "2s",
            "boot_command": [
               "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
            ]
        }
    ],

    "provisioners": [
        {
            "type": "shell",
            "execute_command": "echo '{{user `password`}}' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
            "scripts": [
                "scripts/vagrant.sh"
            ]
        },
        {
            "type": "ansible",
            "extra_arguments": [ "--extra-vars", "activation_key={{user `activation_key`}}" ],
            "playbook_file": "../../playbooks/register.yml",
            "ansible_env_vars": [ "ANSIBLE_CONFIG=../ansible.cfg" ]
        },
        {
            "type": "shell",
            "execute_command": "echo '{{user `password`}}' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
            "scripts": [
                "scripts/cleanup.sh"
            ]
        }
    ],

    "post-processors": [
        {
            "keep_input_artifact": false,
            "output": "box/rhel-6.9_x86_64-server.box",
            "type": "vagrant"
        }
    ]
}
